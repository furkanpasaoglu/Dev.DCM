@page
@using Dev.DCM.Localization
@using Microsoft.Extensions.Localization
@using Volo.Abp.AspNetCore.Mvc.UI.Bootstrap.TagHelpers.Modal
@model Dev.DCM.Web.Pages.Cities.EditModal
@inject IStringLocalizer<DCMResource> L
@{
    Layout = null;
}

<abp-dynamic-form abp-model="CityEditViewModel" asp-page="/Cities/EditModal">
    <abp-modal>
        <abp-modal-header title="@L["Update"].Value"></abp-modal-header>
        <abp-modal-body>
            <abp-input asp-for="CityEditViewModel.Id" hidden="true" />
            <abp-form-content/>
        </abp-modal-body>
        <abp-modal-footer buttons="@(AbpModalButtons.Cancel | AbpModalButtons.Save)"></abp-modal-footer>
    </abp-modal>
</abp-dynamic-form>
