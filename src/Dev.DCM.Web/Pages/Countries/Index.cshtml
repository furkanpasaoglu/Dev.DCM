@page
@using Dev.DCM.Localization
@using Dev.DCM.Permissions
@using Microsoft.AspNetCore.Authorization
@using Microsoft.Extensions.Localization
@model Dev.DCM.Web.Pages.Countries.Index
@inject IStringLocalizer<DCMResource> L
@inject IAuthorizationService AuthorizationService
@{
    ViewBag.Title = L["Countries"];
}

@section scripts
{
    <abp-script src="/Pages/Countries/Index.js"/>
}

<abp-card>
    <abp-card-header>
        <abp-row>
            <abp-column size-md="_6">
                <abp-card-title>@L["Countries"]</abp-card-title>
            </abp-column>
            <abp-column size-md="_6" class="text-end">
                @if (await AuthorizationService.IsGrantedAsync(DCMPermissions.Countries.Create))
                {
                    <abp-button id="NewCountryButton"
                                text="@L["NewCountry"].Value"
                                icon="plus"
                                button-type="Primary"/>
                }
            </abp-column>
        </abp-row>
    </abp-card-header>
    <abp-card-body>
        <abp-table striped-rows="true" id="CountriesTable"></abp-table>
    </abp-card-body>
</abp-card>