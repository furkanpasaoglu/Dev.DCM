@page
@using Dev.DCM.Localization
@using Dev.DCM.Permissions
@using Microsoft.AspNetCore.Authorization
@using Microsoft.Extensions.Localization
@using Volo.Abp.AspNetCore.Mvc.UI.Layout
@model Dev.DCM.Web.Pages.CustomerMovementCodes.Index
@inject IStringLocalizer<DCMResource> L
@inject IAuthorizationService AuthorizationService
@inject IPageLayout PageLayout
@{
    PageLayout.Content.BreadCrumb.Add(L["Dashboard"], "/");
    PageLayout.Content.BreadCrumb.Add(L["Locations"]);
    PageLayout.Content.Title = L["CustomerMovementCodes"];
}
@section scripts
{
<abp-script src="/Pages/CustomerMovementCodes/Index.js" />
}

<abp-card>
    <abp-card-header>
        <abp-row>
            <abp-column size-md="_6">
                <abp-card-title>@L["CustomerMovementCodes"]</abp-card-title>
            </abp-column>
            <abp-column size-md="_6" class="text-end">
                @if (await AuthorizationService.IsGrantedAsync(DCMPermissions.CustomerMovementCodes.Create))
                {
                    <abp-button id="NewCustomerMovementCodeButton"
                                text="@L["NewCustomerMovementCode"].Value"
                                icon="plus"
                                button-type="Primary"/>
                }
            </abp-column>
        </abp-row>
    </abp-card-header>
    <abp-card-body>
        <abp-table striped-rows="true" id="CustomerMovementCodesTable"></abp-table>
    </abp-card-body>
</abp-card>