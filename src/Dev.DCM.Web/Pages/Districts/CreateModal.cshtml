@page
@using Dev.DCM.Localization
@using Microsoft.Extensions.Localization
@using Volo.Abp.AspNetCore.Mvc.UI.Bootstrap.TagHelpers.Modal
@model Dev.DCM.Web.Pages.Districts.CreateModal
@inject IStringLocalizer<DCMResource> L
@{
    Layout = null;
}

<abp-dynamic-form abp-model="CreateUpdateDistrict" asp-page="/Districts/CreateModal">
    <abp-modal>
        <abp-modal-header title="@L["NewDistrict"].Value"></abp-modal-header>
        <abp-modal-body>
            <abp-form-content/>
        </abp-modal-body>
        <abp-modal-footer buttons="@(AbpModalButtons.Cancel | AbpModalButtons.Save)"></abp-modal-footer>
    </abp-modal>
</abp-dynamic-form>