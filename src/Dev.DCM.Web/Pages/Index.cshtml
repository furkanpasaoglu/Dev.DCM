@page
@model Dev.DCM.Web.Pages.IndexModel
@using Dev.DCM.Web.Menus
@using Volo.Abp.AspNetCore.Mvc.UI.Layout
@using Microsoft.AspNetCore.Mvc.Localization
@using Dev.DCM.Localization
@using Volo.Abp.Users
@inject IPageLayout PageLayout
@inject IHtmlLocalizer<DCMResource> L
@inject ICurrentUser CurrentUser
@{
    ViewBag.PageTitle = L["Home"];
    PageLayout.Content.MenuItemName = DCMMenus.Home;
}

@section styles {
    <abp-style src="/Pages/Index.css"/>
}

<div class="container" style="margin-top: 250px;">
    <div class="row">
        <div class="col-md-12">
            <h1 class="text-center">@L["Welcome"] @CurrentUser.UserName</h1>
            <h3 class="text-center">@L["PhoneWithSearch"]</h3>
            <div class="input-group mb-3">
                <input type="text" class="form-control" placeholder="@L["Search"]" aria-label="@L["Search"]" aria-describedby="button-addon2">
                <div class="input-group-append">
                    <button class="btn btn-outline-secondary" type="button" id="button-addon2">@L["Search"]</button>
                </div>
            </div>
        </div>
    </div>
</div>