@page
@using Dev.DCM.Localization
@using Dev.DCM.Permissions
@using Microsoft.AspNetCore.Authorization
@using Microsoft.Extensions.Localization
@model Dev.DCM.Web.Pages.JobCodes.Index
@inject IStringLocalizer<DCMResource> L
@inject IAuthorizationService AuthorizationService
@{
    ViewBag.Title = L["JobCodes"];
}
@section scripts
{
    <abp-script src="/Pages/JobCodes/Index.js"/>
}

<abp-card>
    <abp-card-header>
        <abp-row>
            <abp-column size-md="_6">
                <abp-card-title>@L["JobCodes"]</abp-card-title>
            </abp-column>
            <abp-column size-md="_6" class="text-end">
                @if (await AuthorizationService.IsGrantedAsync(DCMPermissions.JobCodes.Create))
                {
                    <abp-button id="NewJobCodeButton"
                                text="@L["NewJobCode"].Value"
                                icon="plus"
                                button-type="Primary"/>
                }
            </abp-column>
        </abp-row>
    </abp-card-header>
    <abp-card-body>
        <abp-table striped-rows="true" id="JobCodesTable"></abp-table>
    </abp-card-body>
</abp-card>